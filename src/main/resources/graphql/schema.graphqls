type Query {
    bookById(id: ID): Book
    books: [Book]
}

type Mutation {
    addBook(name: String, pageCount: Int, authorId: ID): Book
    updateBook(id: ID, name: String, pageCount: Int, authorId: ID): Book
    deleteBook(id: ID): Boolean
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}